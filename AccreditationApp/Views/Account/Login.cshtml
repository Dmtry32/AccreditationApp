<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banque de France</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .login-container {
            max-width: 400px;
            margin: auto;
        }

        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        .login-examples {
            font-size: 0.85rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
            padding: 10px;
            margin-top: 15px;
        }
    </style>
</head>
<body class="text-center">
    <div class="login-container">
        <div class="card">
            <div class="card-header text-center bg-light">
                <img src="~/images/logo.png" alt="Banque de France" class="img-fluid mb-3" style="max-height: 100px;">
                <h4>BANQUE DE FRANCE</h4>
                <h5>EUROSYSTÈME</h5>
            </div>
            <div class="card-body">
                <!-- Display error messages -->
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">Nom d'utilisateur</label>
                        <input asp-for="Username" class="form-control" placeholder="prenom.nom@DT.lan" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Mot de passe</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Votre mot de passe" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                    </div>

                    <div class="login-examples">
                        <small class="text-muted">Exemples de format:</small><br>
                        <small>• prenom.nom@DT.lan</small><br>
                        <small>• DT\prenom.nom</small>
                    </div>
                </form>
            </div>
        </div>

        <!-- Try Windows Authentication button -->
        <div class="mt-3">
            <a href="@Url.Action("WindowsLogin", "Account", new { returnUrl = ViewData["ReturnUrl"] })"
               class="btn btn-outline-secondary w-100">
                Connexion avec compte Windows
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>