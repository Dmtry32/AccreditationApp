@model IEnumerable<AccreditationApp.Models.Accreditation>

@{
    ViewData["Title"] = "Accreditation History";
}

<style>
    .history-container {
        max-width: 900px;
        margin: 40px auto 0 auto;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        padding: 32px 24px;
    }
    .history-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 600;
        color: #1a237e;
        margin-bottom: 24px;
    }
    .history-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 16px;
    }
    .history-table th, .history-table td {
        padding: 12px 8px;
        text-align: left;
    }
    .history-table th {
        background: #e3f2fd;
        color: #1565c0;
        font-weight: 600;
        border-bottom: 2px solid #90caf9;
    }
    .history-table tr:nth-child(even) {
        background: #f5f5f5;
    }
    .status-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.95em;
        font-weight: 500;
        background: #ffe082;
        color: #795548;
    }
</style>

<div class="history-container">
    <div class="history-title">Accreditation History</div>
    <table class="history-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Date de naissance</th>
                <th>Banque</th>
                <th>Statut</th>
                <th>Date de demande</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Email</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td>@item.Bank</td>
                <td>
                    <span class="status-badge">@item.Status</span>
                </td>
                <td>@item.RequestDate.ToString("g")</td>
            </tr>
        }
        </tbody>
    </table>
</div>